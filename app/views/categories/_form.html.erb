<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded") do |f| %>

        <div class="form-group row mb-3">
          <%= f.label :name, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Category name" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg col-2" %>
        </div>

      <% end %>   
    </div>
    <div class="mb-3">
      <%= link_to "[ Cancel and return to categories listing ]", categories_path, class: "text-dark form-group row justify-content-center" %>
    </div>
  </div>
</div>