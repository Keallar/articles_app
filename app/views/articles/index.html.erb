<h1>Index articles</h1>

<table>
  <thead>
    <tf>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tf>
  </thead>

  <tbody>
    <%@articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= link_to "Show", article %></td>
        <td><%= link_to "Edit", edit_article_path(article) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New", new_article_path %>